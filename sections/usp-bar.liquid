{{ 'usp-bar.css' | asset_url | stylesheet_tag }}

<section class="header-usp color-{{ section.settings.container_color_scheme }} {% if section.settings.mobile_add_to_menu %}mobile-add-to-menu{% endif %}">
  <div class="header-usp__container page-width">
    <div class="header-usp__content header-usp__align-{{ section.settings.alignment }}">
      {% for block in section.blocks %}
        <div class="header-usp__block">
          <div class="header-usp__text">
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="header-usp__link" target="{{ block.settings.link_target }}">
            {% endif %}
            {% if block.settings.icon != 'none' %}
              <span class="header-usp__icon">
                {% render 'icon-accordion', icon: block.settings.icon %}
              </span>
            {% endif %}
            {{ block.settings.usp_text }}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script src="{{ 'usp-bar.js' | asset_url }}" defer></script>

