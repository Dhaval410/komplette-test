<span class="svg-wrapper">{{ 'icon-cart-beg.svg' | inline_asset_content }}</span>
{% if cart == empty %}
  <span class="{{ text_visibility }}">{{ 'templates.cart.cart' | t }}</span>
{% else %}
  <span class="{{ text_visibility }}">
    <span class="centered-text">{{ cart.total_price | money }}</span> 
  </span>
{% endif %}

{% if section.setting.show_icon_title == false %}
  {%- if cart != empty -%}
    <div class="cart-count-bubble">
      {%- if cart.item_count < 100 -%}
        <span aria-hidden="true">{{ cart.item_count }}</span>
      {%- endif -%}
      <span class="{{ text_visibility }}">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
    </div>
  {%- endif -%}
{% endif %}
